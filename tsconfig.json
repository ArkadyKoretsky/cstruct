{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./lib",
    "lib": [
      "ES5",
      "ES2020",
    ],
    "declaration": true,
    "strict": false,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "out"
  ],
  "ts-node": {
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./out",
      "sourceMap": true
    }
  }
}